---
const { FontName, TotalStyles, FontPath, FontFamily, FontDesigner } = Astro.props;
const newPath = `/${FontPath}/`;

const isSmall = FontName.includes("Ekushey") || FontFamily.includes("Bensen") || FontFamily.includes("Hoogli") || FontFamily.includes("Aikya") || FontFamily.includes("Atma")  || FontFamily.includes("Bornoporichay")  || FontFamily.includes("Somoyer Srot")  || FontFamily.includes("Abu Sayed")  || FontFamily.includes("Tuli")  || FontFamily.includes("Nilima")  || FontFamily.includes("UN Bangla");
---

<a
  href={newPath} id={FontPath}
  class="relative flex flex-col items-stretch p-8 rounded-[2.5rem] border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 transition-all duration-700 hover:shadow-[0_40px_80px_-15px_rgba(0,0,0,0.1)] dark:hover:shadow-[0_40px_80px_-15px_rgba(0,0,0,0.5)] hover:-translate-y-3 group overflow-hidden" aria-label={`${FontName} font`}
>
  <!-- Interactive Hover Glow -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
  
  <div class="relative z-10 flex flex-col h-full">
    <!-- Font Preview Area -->
    <div class="flex-1 flex items-center min-h-[140px] mb-8">
      <span 
        style={`font-family: ${FontFamily}!important;`} 
        class={`${isSmall ? "text-4xl" : "text-4xl"} leading-[1.3] notranslate text-neutral-900 dark:text-neutral-50 transition-transform duration-500 group-hover:scale-[1.03] origin-left`}
      >
        আমার সোনার বাংলা<br/>আমি তোমায় ভালোবাসি
      </span>
    </div>

    <!-- Info Panel -->
    <div class="pt-8 border-t border-neutral-100 dark:border-neutral-800/50">
      <div class="flex items-center justify-between mb-2">
        <h2 class="text-2xl font-black tracking-tight text-neutral-900 dark:text-neutral-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
          {FontName}
        </h2>
        
        <span class="text-[0.65rem] uppercase tracking-widest font-black bg-blue-50 dark:bg-blue-900/30 px-3 py-1 rounded-full text-blue-600 dark:text-blue-400 border border-blue-100 dark:border-blue-800/50">
          {TotalStyles} {TotalStyles > 1 ? 'Variants' : 'Variant'}
        </span>
      </div>

      <!-- Designer Attribution -->
      <div class="flex items-center space-x-2">
        <div class="w-4 h-[1px] bg-neutral-300 dark:text-neutral-700"></div>
        <p class="text-sm font-medium text-neutral-500 dark:text-neutral-500">
          Designed by <span class="text-neutral-800 dark:text-neutral-300 font-bold">{FontDesigner || 'Unknown'}</span>
        </p>
      </div>
    </div>
  </div>

  <!-- Decorative Corner Icon -->
  <div class="absolute bottom-6 right-8 opacity-0 group-hover:opacity-100 group-hover:translate-x-0 translate-x-4 transition-all duration-500">
    <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
    </svg>
  </div>
</a>

<style>
  /* Custom easing for premium feel */
  .group {
    transition-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1);
  }
</style>
