---
import Layout from "../layouts/main.astro";
import fonts from '../collections/fonts.json';
import licenses from '../collections/licenses.json';
import PageHeading from "../components/page-heading.astro";
import CodeBox from "../components/codebox.astro";
import PreviewInput from "../components/preview-input.astro";
import BanglaGylphs from "../components/bangla-gylphs.astro";

export async function getStaticPaths() {
  return fonts.map(font => ({
    params: { font: font.FontPath },
    props: font,
  }));
}

const { FontName, TotalStyles, FontFamily, FontWeights, FontTesterWeights, FontDesigner, FontPath, FontDesignerURL, FontLicense } = Astro.props;

const LicenseInfo = licenses[FontLicense]?.LicenseText || FontLicense || "License information not available.";

const FontCategory = FontFamily.includes("sans-serif") ? "Sans Serif" : (FontFamily.includes("serif") ? "Serif" : "Unknown");

const getWeightName = (weight) => {
  const weightNames = {
    100: 'Thin',
    200: 'Extra Light',
    300: 'Light',
    400: 'Regular',
    500: 'Medium',
    600: 'Semi Bold',
    700: 'Bold',
    800: 'Extra Bold',
    900: 'Black'
  };
  return weightNames[weight] || `Unknown (${weight})`;
};

const getLowercaseWeightName = (weight) => {
  const weightNames = {
    100: 'thin',
    200: 'extralight',
    300: 'light',
    400: 'regular',
    500: 'medium',
    600: 'semibold',
    700: 'bold',
    800: 'extrabold',
    900: 'black'
  };
  return weightNames[weight] || `unknown-${weight}`;
};

const FontPreloads = FontWeights.map(weight => {
  const weightName = getLowercaseWeightName(weight);
  return `<link rel="preload" as="font" type="font/woff2" href="/fonts/${FontPath}/${FontPath}-${weightName}.woff2" crossorigin="anonymous">`;
}).join("\n");

const includePreload = (Number(TotalStyles) > 1
  ? [400]
  : FontTesterWeights
).map(weight => {
  const weightName = getLowercaseWeightName(weight);
  return `<link rel="preload" as="font" type="font/woff2" href="https://fonts.mnr.bd/fonts/${FontPath}/${FontPath}-${weightName}.woff2" crossorigin="anonymous">`;
}).join("\n");

const PreloadedFontName = (Number(TotalStyles) > 1
  ? [400]
  : FontTesterWeights
).map(weight => {
  const weightName = getWeightName(weight);
  return `${FontName} ${weightName}`;
}).join("\n");

const PageTitle = `${FontName} - MNR Fonts`;
const MetaDescription = `${FontName} is a free web font, optimized for smooth rendering and fast loading. Easily use ${FontName} on your website with Free Font CDN.`;

const fontNameL = FontName.toLowerCase();
const MetaKeywords = `${fontNameL}, ${fontNameL} web font, ${fontNameL} font cdn, ${fontNameL} font download, ${fontNameL} free download, ${fontNameL} embed link, ${fontNameL} font, mnr fonts, bengali font, ${fontNameL} font for website`;

const FontCSS = `https://fonts.mnr.bd/css/${FontPath}.css`;
const FontMinifiedCSS = `https://fonts.mnr.bd/css/${FontPath}.min.css`;
const ExtraStyleUrl = `/css/${FontPath}.min.css`;
---

<Layout title={PageTitle} extraStyleUrl={ExtraStyleUrl} metaDescription={MetaDescription} metaKeywords={MetaKeywords} fontPreloads={FontPreloads}>

<section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0 overflow-x-hidden">

<div class="relative z-20 w-full mx-auto lg:mx-0">
  <h1 class="text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl lg:text-6xl">{FontName}</h1>
  <div id="type-tester"/>
  <p class="mt-3 text-base leading-6 text-neutral-800 dark:text-neutral-200 sm:mt-4 lg:mt-6 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg">Designed by <a href={FontDesignerURL} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer"
>{FontDesigner}</a></p>
</div>

<PreviewInput/>

<hr class="mt-8 border-gray-200 dark:border-gray-800">

     {FontTesterWeights.map(weight => {
  const isGenerated = !FontWeights.includes(weight);
  return (
    <div class="mt-8">
      <p class="mb-2 leading-6 text-neutral-700 dark:text-neutral-300 sm:leading-7 lg:leading-8">
        {getWeightName(weight)} {weight}
        <span class="text-sm">{isGenerated && ' (Generated)'}</span>
      </p>
      <p
        class="fhs-font-preview leading-tight"
        style={`font-family: ${FontFamily}; font-weight: ${weight}; font-size: 40px;`}
      >
        আমার সোনার বাংলা
      </p>
    </div>
  );
})}

<div class="mt-8 mb-2 pt-14 border-t border-gray-200 dark:border-gray-800">


<div class="flex gap-3 items-center">
<h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl">Embed</h2>
<input id="linkInput" type="radio" name="btns" class="hidden" checked>
<label for="linkInput" class="text-sm font-mono bg-neutral-100 hover:bg-slate-200 dark:bg-transparent cursor-pointer px-3 py-1 my-auto rounded-lg block ml-2">
  &lt;link&gt;
</label>

<input id="importInput" type="radio" name="btns" class="peer hidden">
<label for="importInput" class="text-sm font-mono bg-neutral-100 hover:bg-slate-200 dark:bg-transparent cursor-pointer px-3 py-1 my-auto rounded-lg block">
  @import
</label>
</div>








<div class="mt-2 flex flex-row flex-wrap w-full">






  
  <p class="mt-2">Copy the following code and paste into the <span class="text-sm font-mono bg-gray-100 dark:bg-gray-900 px-1 py-0.5 rounded">&lt;head&gt;</span> of your HTML document.</p>

<div class="preloadBtn mt-3 ml-auto mr-0 mb-1 flex items-center justify-end bg-neutral-100 hover:bg-slate-200 cursor-pointer px-3 py-1 rounded-lg">
<input id="preloadInput" type="checkbox" class="mr-2 w-3 h-3 !bg-neutral-100 !rounded-lg !border-neutral-200 !ring-neutral-200 !outline-none accent-gray-900">
<label for="preloadInput" class="text-sm">
  Include Preload Link
</label>
</div>

<div class="w-full rounded-xl">

   <CodeBox id="linkCodebox" code={`<link href="${FontCSS}" rel="stylesheet">`} />

    <CodeBox id="linkPreloadCodebox" code={`${includePreload}
<link href="${FontCSS}" rel="stylesheet">`} />

  
  
   <CodeBox id="importCodebox" code={`<style>
@import url('${FontCSS}');
</style>`} />

<CodeBox id="importPreloadCodebox" code={`${includePreload}
<style>
@import url('${FontCSS}');
</style>`} />


<p id="preloadInfo" class="text-sm mt-3 hidden">
  Preload link for <span class="font-medium">{PreloadedFontName}</span> has been added to the code. This helps prevent FOUT and improves page loading performance.
  <a href="https://web.dev/articles/codelab-preload-web-fonts" rel="noopener noreferrer" target="_blank" class="hover:underline text-blue-600">Learn more here</a>.
</p>
</div>

</div>


<style is:inline>
.active {
 color: #fff!important;
background: #1f2937!important;
}
</style>

<script is:inline>
  // get all inputs
  var linkInput = document.getElementById("linkInput");
  var importInput = document.getElementById("importInput");
  var preloadInput = document.getElementById("preloadInput");

  // get all labels
  var linkLabel = document.querySelector("label[for='linkInput']");
  var importLabel = document.querySelector("label[for='importInput']");
  var preloadLabel = document.querySelector(".preloadBtn");

  // get all code boxes via class
  var linkCodebox = document.querySelector(".linkCodebox");
  var linkPreloadCodebox = document.querySelector(".linkPreloadCodebox");
  var importCodebox = document.querySelector(".importCodebox");
  var importPreloadCodebox = document.querySelector(".importPreloadCodebox");

  // get preload info paragraph
  var preloadInfo = document.getElementById("preloadInfo");

  // function to update view
  function updateView() {
    // hide all code boxes first
    linkCodebox.style.display = "none";
    linkPreloadCodebox.style.display = "none";
    importCodebox.style.display = "none";
    importPreloadCodebox.style.display = "none";

    // remove active class from all labels
    linkLabel.classList.remove("active");
    importLabel.classList.remove("active");
    preloadLabel.classList.remove("active");

    // add active class to selected tab input
    if (linkInput.checked) {
      linkLabel.classList.add("active");
      if (preloadInput.checked) {
        linkPreloadCodebox.style.display = "block";
      } else {
        linkCodebox.style.display = "block";
      }
    }

    if (importInput.checked) {
      importLabel.classList.add("active");
      if (preloadInput.checked) {
        importPreloadCodebox.style.display = "block";
      } else {
        importCodebox.style.display = "block";
      }
    }

    // add active class to preload input if checked
    if (preloadInput.checked) {
      preloadLabel.classList.add("active");
      preloadInfo.style.display = "block"; // show paragraph
    } else {
      preloadInfo.style.display = "none"; // hide paragraph
    }
  }

  // attach event listeners
  linkInput.addEventListener("change", updateView);
  importInput.addEventListener("change", updateView);
  preloadInput.addEventListener("change", updateView);

  // run once at start
  updateView();
</script>


<h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl mt-14">CSS</h2>
<p class="text-neutral-900 dark:text-neutral-100 mt-3 sm:mt-4">Use the <span class="text-sm font-mono bg-gray-100 dark:bg-gray-900 px-1 py-0.5 rounded notranslate">font-family: {FontFamily};</span> CSS declaration to specify the {FontName} font. Example:</p>
<CodeBox id="CLASScodebox" code={`body {
  font-family: ${FontFamily};
  font-weight: 400;
  font-style: normal;
}`} />
</div>
<p class="mt-5">If you face any problems while embedding the font, please check the <a class="text-blue-600 hover:underline" href="/docs">documentation</a>.</p>





<div class="mt-14 bg-blue-50 dark:bg-gray-900 border-l-4 border-blue-500 dark:border-blue-400 text-blue-900 dark:text-blue-100 p-4 rounded-xl">
  <h3 class="font-bold text-lg">Performance Tip</h3>
  <p class="text-sm mt-1">You can use the <span class="font-mono bg-blue-100 dark:bg-blue-700 px-1 py-0.5 rounded">.min.css</span> version for better performance and faster loading times.</p>
  <div class="bg-white dark:bg-black p-4 mt-3 rounded-lg border border-blue-200 dark:border-gray-800 text-sm">
    <span class="text-neutral-700 dark:text-neutral-300">Standard CSS:</span>  
    <p class="text-blue-600 dark:text-blue-300 break-words whitespace-normal">{FontCSS}</p>
    <span class="text-neutral-700 dark:text-neutral-300 mt-2 block">Minified CSS:</span>  
    <p class="text-blue-600 dark:text-blue-300 break-words whitespace-normal">{FontMinifiedCSS}</p>
  </div>
</div>




<div id="about" class="pt-14">
  <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl">About {FontName} Font</h2>
<div class="mt-2">
  <div class="pt-2 sm:pt-1 sm:grid sm:grid-cols-4 sm:gap-0">
    <h3 class="font-semibold text-neutral-900 dark:text-neutral-200">Family</h3>
    <p class="text-neutral-800 dark:text-neutral-300 sm:col-span-3">{FontName}</p>
  </div>
  <div class="pt-2 sm:pt-1 sm:grid sm:grid-cols-4 sm:gap-0">
    <h3 class="font-semibold text-neutral-900 dark:text-neutral-200">Total Styles</h3>
    <p class="text-neutral-800 dark:text-neutral-300 sm:col-span-3">{TotalStyles}</p>
  </div>
  <div class="pt-2 sm:pt-1 sm:grid sm:grid-cols-4 sm:gap-0">
    <h3 class="font-semibold text-neutral-900 dark:text-neutral-200">Category</h3>
    <p class="text-neutral-800 dark:text-neutral-300 sm:col-span-3">{FontCategory}</p>
  </div>
  <div class="pt-2 sm:pt-1 sm:grid sm:grid-cols-4 sm:gap-0">
    <h3 class="font-semibold text-neutral-900 dark:text-neutral-200">Designer</h3>
    <a href={FontDesignerURL} target="_blank" rel="noopener noreferrer" class="text-blue-700 sm:col-span-3 sm:mt-0 hover:underline">{FontDesigner}</a>
  </div>
  <div class="pt-2 sm:pt-1 sm:grid sm:grid-cols-4 sm:gap-0">
    <h3 class="font-semibold text-neutral-900 dark:text-neutral-200">License</h3>
    <p class="text-neutral-800 dark:text-neutral-300 sm:col-span-3" set:html={LicenseInfo}></p>
  </div>
 </div>
</div>





<div class="mt-14">
  <h2 class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl">Glyphs</h2>
  <p class="mt-3 text-base leading-6 text-neutral-800 dark:text-neutral-200 sm:mt-4 lg:mt-6 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg">Only a subset of the {FontName} font's glyphs is shown here. To view the full set, try it out in the <a class="text-blue-600 hover:underline" href="#type-tester">type tester</a>.</p>
  <BanglaGylphs fontFamily={FontFamily}/>
</div>

</section>
<script src="../assets/js/font.js"></script>
</Layout>
